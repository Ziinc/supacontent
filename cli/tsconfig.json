{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src/**/*", "tests/**/*", "__mocks__/**/*"],
  "exclude": ["node_modules/**/*"]
}
